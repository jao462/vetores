#include <iostream>
using namespace std;

int main() {
    int N;
    cin >> N;

    int vet[100];
    for (int i = 0; i < N; i++) {
        cin >> vet[i];
    }

    int soma = 0;
    int cont = 0;

    for (int i = 0; i < N; i++) {
        if (vet[i] % 2 == 0) {
            soma += vet[i];
            cont++;
        }
    }

    if (cont == 0) {
        cout << "NENHUM NUMERO PAR" << endl;
    } else {
        cout.setf(ios::fixed);
        cout.precision(1);
        cout << (double)soma / cont << endl;
    }

    return 0;
}
